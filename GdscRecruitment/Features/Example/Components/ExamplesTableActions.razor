@using GdscRecruitment.Features.Example.Models
@using GdscRecruitment.Utilities
@using GdscRecruitment.Shared.Components
@inherits OwningComponentBase<ExamplesService>

<MudPaper Class="pa-4 mt-4 d-flex">
    <AuthorizeView Roles="@Roles.Admin">
        <Authorized>
            <ErrorButton
                Tooltip="Select items to delete"
                Disabled="@(SelectedItems.Count == 0)"
                Icon="fa-dumpster">
            </ErrorButton>

            <MudSpacer></MudSpacer>

            <PrimaryButton
                Text="Open Add page"
                Href="@ExampleRoutes.AddExample"
                Tooltip="Add new example">
            </PrimaryButton>
        </Authorized>

        <NotAuthorized>
            <ErrorButton
                Tooltip="Only admins can delete"
                Disabled="true"
                Icon="fa-dumpster">
            </ErrorButton>

            <MudSpacer></MudSpacer>

            <PrimaryButton
                Text="Open add page"
                Disabled="true"
                Tooltip="Only admins can add">
            </PrimaryButton>
        </NotAuthorized>
    </AuthorizeView>
</MudPaper>

@code {

    [Parameter]
    public HashSet<ExampleViewModel> SelectedItems { get; set; } = new();

}
